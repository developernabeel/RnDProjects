@model SBIReportUtility.Web.Models.User.UserViewModel
@{
    ViewBag.Title = "State Bank of India";
}
@Html.HiddenFor(m => m.Pfid, new { @id = "hdnPfid" })
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        @Html.Partial("~/Views/Shared/_MessageNotifications.cshtml")
    </div>
</div>

<div aria-labelledby="myModalLabel" id="projectModal" class="modal fade" role="dialog" tabindex="-1"></div>

<div aria-labelledby="unassign-project" id="unassign-modal" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog">
        <!--Modal Content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Confirm?</h4>

            </div>
            <div class="modal-body">
                Are you sure you want to unassign this project?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                <button type="submit" class="btn btn-success" id="btn-confirm">Yes</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <h2 class="pull-left">User Profile</h2>
    <a href="@Url.Action("Index", "User")" class="btn btn-primary btn-add">Back</a>
</div>

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span>User Details</span>
        </div>
        <div class="panel-body">

            <div class="form-group row">
                <div class="col-lg-2">
                    @Html.LabelFor(m => m.Pfid) :
                </div>
                <div class="col-lg-10">
                    @Html.DisplayFor(m => m.Pfid, new { @class = "" })
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-2">
                    @Html.LabelFor(m => m.Name) :
                </div>
                <div class="col-lg-10">
                    @Html.DisplayFor(m => m.Name, new { @class = "" })
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-2">
                    @Html.LabelFor(m => m.EmailId) :
                </div>
                <div class="col-lg-10">
                    @Html.DisplayFor(m => m.EmailId, new { @class = "" })
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-lg-2">
                    @Html.LabelFor(m => m.Designation) :
                </div>
                <div class="col-lg-10">
                    @Html.DisplayFor(m => m.Designation, new { @class = "" })
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- /.row -->
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <span>Projects Assigned</span>
        </div>
        <div class="panel-body">
            <div class="col-lg-12">
                <button type="button" class="btn btn-primary btn-add" onclick="fnShowAssignProjectPopup()">Assign Project</button>
            </div>
            <div class="col-lg-12">
                <table class="table table-striped table-bordered table-hover" id="tbl-projects" cellspacing="0"></table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
</div>

<!-- /.row -->
@section Scripts {
    <script src="~/Scripts/CustomJs/User/userProfile.js"></script>
}
