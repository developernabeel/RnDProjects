@model SBIReportUtility.Web.Models.User.AssignProjectViewModel
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        @using (Ajax.BeginForm("AssignProject", "User", new AjaxOptions { OnSuccess = "fnOnSuccess", HttpMethod = "POST" }, new { @class = "", @id = "frmAssignProject" }))
        {
            @Html.AntiForgeryToken();
            @Html.ValidationSummary(true);
            @Html.HiddenFor(m => m.Pfid, new { @id = "hdnPopupPfid"})
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Assign Project</h4>
            </div>
            <div class="modal-body">
                
                <div class="form-group">
                    <div class="clearfix"></div>
                    <label for="ddlProjects">Projects<sup class="text-danger">*</sup></label>
                    @Html.DropDownListFor(m => m.ProjectId, Model.ProjectList, "Select", new { @class = "form-control", @id = "ddlProjects" })
                    @Html.ValidationMessageFor(m => m.ProjectId, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="clearfix"></div>
                    <label for="chkIsAdmin">Is Admin</label>
                    @Html.CheckBoxFor(m => m.IsAdmin, new { @class = "", @id = "chkIsAdmin" })
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" tabindex="6">Cancel</button>
                <button type="submit" class="btn btn-success" id="btnConfirm" tabindex="7">Assign</button>
            </div>
        }
    </div>
</div>