@model SBIReportUtility.Web.Models.Connection.ConnectionViewModel
@{
    ViewBag.Title = "AddEditConnection";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">@(Model.Id > 0 ? "Edit" : "Add") Connection</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@using (Html.BeginForm("AddEditConnection", "Connection", FormMethod.Post, new { @class = "", @id = "frmConnection" }))
{
    <div class="row">
        <div class="col-lg-8">
            @Html.AntiForgeryToken()
            @*@Html.ValidationSummary(true);*@

            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                <label for="txtConnectionName">Connection Name<span class="text-danger"> *</span></label>
                @Html.TextBoxFor(m => m.ConnectionName, new { @placeholder = "Connection Name", @id = "txtConnectionName", @class = "form-control", @maxlength = "50" })
                @Html.ValidationMessageFor(m => m.ConnectionName, "", new { @class = "text-danger" })
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label for="ddlProjects">Project<span class="text-danger"> *</span></label>
                @Html.DropDownListFor(m => m.ProjectId, Model.ProjectList, "Select", new { @id = "ddlProjects", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ProjectId, "", new { @class = "text-danger" })
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label for="txtSID">SID<span class="text-danger"> *</span></label>
                @Html.TextBoxFor(m => m.SID, new { @placeholder = "SID", @id = "txtSID", @class = "form-control", @maxlength = "50" })
                @Html.ValidationMessageFor(m => m.SID, "", new { @class = "text-danger" })
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label for="txtIpAddress">IP Address<span class="text-danger"> *</span></label>
                @Html.TextBoxFor(m => m.IpAddress, new { @placeholder = "IP Address", @id = "txtIpAddress", @class = "form-control", @maxlength = "50" })
                @Html.ValidationMessageFor(m => m.IpAddress, "", new { @class = "text-danger" })
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label for="txtPortNumber">Port Number<span class="text-danger"> *</span></label>
                @Html.TextBoxFor(m => m.PortNumber, new { @placeholder = "Port Number", @id = "txtPortNumber", @class = "form-control", @maxlength = "50" })
                @Html.ValidationMessageFor(m => m.PortNumber, "", new { @class = "text-danger" })
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label for="txtUserName">Connection Username<span class="text-danger"> *</span></label>
                @Html.TextBoxFor(m => m.ConnectionUsername, new { @placeholder = "UserName", @id = "txtUserName", @class = "form-control", @maxlength = "50" })
                @Html.ValidationMessageFor(m => m.ConnectionUsername, "", new { @class = "text-danger" })
                <div class="clearfix"></div>
            </div>
            <div class="form-group">
                <label for="txtPassword">Connection Password<span class="text-danger"> *</span></label>
                @Html.PasswordFor(m => m.ConnectionPassword, new { @placeholder = "Password", @id = "txtPassword", @class = "form-control", @maxlength = "50" })
                @Html.ValidationMessageFor(m => m.ConnectionPassword, "", new { @class = "text-danger" })
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="row">
        <button type="submit" class="btn btn-success">@(Model.Id > 0 ? "Save" : "Add")</button>
        <button type="button" class="btn btn-primary" onclick="testConnection();">Test Connection</button>
        <a href="@Url.Action("Index","Connection")" class="btn btn-danger">Cancel</a>
    </div>
}

@section Scripts {
    <script src="~/Scripts/CustomJs/Connection/addEditConnection.js"></script>
}